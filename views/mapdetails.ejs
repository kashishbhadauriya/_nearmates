<!DOCTYPE html>
<html>
<head>
  <title>User Locations</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px;
      position: relative;
      overflow-x: hidden;
    }

    /* Animated background particles */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="1.5" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="60" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="80" r="2.5" fill="rgba(255,255,255,0.1)"/><circle cx="10" cy="90" r="1.5" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
      animation: float 20s linear infinite;
      pointer-events: none;
      z-index: 1;
    }

    @keyframes float {
      0% { transform: translateY(0px) rotate(0deg); }
      100% { transform: translateY(-100vh) rotate(360deg); }
    }

    .container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 30px;
      box-shadow: 
        0 20px 40px rgba(0,0,0,0.1),
        0 0 0 1px rgba(255,255,255,0.2);
      width: 95%;
      max-width: 1200px;
      position: relative;
      z-index: 2;
    }

    h2 {
      font-weight: 700;
      color: white;
      font-size: 2.5em;
      margin-bottom: 25px;
      text-shadow: 0 4px 8px rgba(0,0,0,0.2);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 15px;
      letter-spacing: -0.02em;
    }

    .location-icon {
      font-size: 1.2em;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.1); }
    }

    #map { 
      height: 75vh; 
      width: 100%; 
      border-radius: 20px;
      box-shadow: 
        0 15px 35px rgba(0,0,0,0.15),
        inset 0 0 0 1px rgba(255,255,255,0.1);
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    #map:hover {
      transform: translateY(-5px);
      box-shadow: 
        0 25px 50px rgba(0,0,0,0.2),
        inset 0 0 0 1px rgba(255,255,255,0.2);
    }

    /* Custom leaflet controls styling */
    .leaflet-control-zoom a {
      background: rgba(255,255,255,0.9) !important;
      backdrop-filter: blur(10px);
      color: #333 !important;
      border: 1px solid rgba(255,255,255,0.2) !important;
      transition: all 0.3s ease !important;
    }

    .leaflet-control-zoom a:hover {
      background: rgba(255,255,255,1) !important;
      transform: scale(1.05);
    }

    .leaflet-control-attribution {
      background: rgba(255,255,255,0.8) !important;
      backdrop-filter: blur(10px) !important;
      border-radius: 8px !important;
      padding: 5px 8px !important;
    }

    /* Enhanced popup styling */
    .leaflet-popup-content {
      font-size: 14px;
      font-weight: 500;
      color: #333;
      font-family: 'Inter', sans-serif;
      margin: 15px 20px;
      line-height: 1.6;
    }

    .leaflet-popup-content-wrapper {
      background: rgba(255,255,255,0.95);
      backdrop-filter: blur(15px);
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      border: 1px solid rgba(255,255,255,0.3);
    }

    .leaflet-popup-tip {
      background: rgba(255,255,255,0.95);
      backdrop-filter: blur(15px);
    }

    .leaflet-popup-close-button {
      color: #666 !important;
      font-size: 18px !important;
      font-weight: 600 !important;
      transition: color 0.2s ease !important;
    }

    .leaflet-popup-close-button:hover {
      color: #333 !important;
    }

    .leaflet-popup-content b {
      color: #667eea;
      font-weight: 600;
      font-size: 16px;
      display: block;
      margin-bottom: 8px;
    }

    .chat-btn {
      display: inline-block;
      margin-top: 12px;
      padding: 10px 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 25px;
      font-size: 13px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
      border: 1px solid rgba(255,255,255,0.2);
      letter-spacing: 0.5px;
    }

    .chat-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
      background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
    }

    /* Custom marker cluster styling */
    .marker-cluster-small {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
      border: 2px solid rgba(255,255,255,0.3) !important;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3) !important;
    }

    .marker-cluster-medium {
      background: linear-gradient(135deg, #764ba2 0%, #f093fb 100%) !important;
      border: 2px solid rgba(255,255,255,0.3) !important;
      box-shadow: 0 4px 15px rgba(118, 75, 162, 0.3) !important;
    }

    .marker-cluster-large {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%) !important;
      border: 2px solid rgba(255,255,255,0.3) !important;
      box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3) !important;
    }

    .marker-cluster div {
      background: rgba(255,255,255,0.2) !important;
      backdrop-filter: blur(10px);
      border-radius: 50% !important;
      font-weight: 700 !important;
      color: white !important;
      text-shadow: 0 1px 3px rgba(0,0,0,0.3) !important;
    }

    /* Loading animation */
    .loading {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 18px;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .spinner {
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255,255,255,0.3);
      border-top: 2px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Responsive design */
    @media (max-width: 768px) {
      .container {
        padding: 20px;
        width: 98%;
      }
      
      h2 {
        font-size: 2em;
        margin-bottom: 20px;
      }
      
      #map {
        height: 70vh;
      }
    }

    @media (max-width: 480px) {
      h2 {
        font-size: 1.8em;
        flex-direction: column;
        gap: 10px;
      }
      
      #map {
        height: 65vh;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2><span class="location-icon">üìç</span>Nearby Users<span style="font-size: 0.6em; opacity: 0.8;">(within 100 km)</span></h2>
    <div id="map">
      <div class="loading">
        <div class="spinner"></div>
        Loading your location...
      </div>
    </div>
  </div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>

  <script>
    // Remove loading indicator when map loads
    function removeLoading() {
      const loading = document.querySelector('.loading');
      if (loading) loading.remove();
    }

    var map = L.map('map').setView([20.5937, 78.9629], 5);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors',
      maxZoom: 19
    }).addTo(map);

    var markers = L.markerClusterGroup();
    var defaultIcon = '/uploads/icon.png'; // Default icon if DP not uploaded

    function getDistanceFromLatLon(lat1, lon1, lat2, lon2) {
      const R = 6371; // Earth radius in km
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a =
        Math.sin(dLat / 2) * Math.sin(dLat / 2) +
        Math.cos(lat1 * Math.PI / 180) *
        Math.cos(lat2 * Math.PI / 180) *
        Math.sin(dLon / 2) * Math.sin(dLon / 2);
      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
      return R * c; 
    }

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(position => {
        removeLoading();
        let myLat = position.coords.latitude;
        let myLng = position.coords.longitude;

        // Current user marker
        const currentUserIcon = L.divIcon({
          className: 'current-user-icon',
          html: `<img src="/uploads/locationicon.png" alt="You" style="width:45px;height:45px;border-radius:50%;border:3px solid #ff4757;object-fit:cover;box-shadow:0 4px 15px rgba(255,71,87,0.4);">`,
          iconSize: [45,45],
          iconAnchor: [22,45]
        });
        L.marker([myLat, myLng], {icon: currentUserIcon}).addTo(map)
          .bindPopup("<b>You are here</b>")
          .openPopup();

        map.setView([myLat, myLng], 13);

        // Save current user location to DB
        fetch('/save-location', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ latitude: myLat, longitude: myLng })
        }).catch(err => console.error(err));

        // Fetch other users
        fetch("/api/locations")
          .then(res => res.json())
          .then(users => {
            users.forEach(user => {
              if (!user.location || !user.location.latitude || !user.location.longitude) return;

              let dist = getDistanceFromLatLon(
                myLat, myLng,
                user.location.latitude, user.location.longitude
              );

              if (dist <= 1000) {
    
                const dp = user.dp || defaultIcon;

                // User DP as marker icon
                const userIcon = L.divIcon({
                  className: 'user-icon',
                  html: `<img src="${dp}" alt="${user.name}" style="width:40px;height:40px;border-radius:50%;border:2px solid #667eea;object-fit:cover;box-shadow:0 4px 15px rgba(102,126,234,0.3);">`,
                  iconSize: [40,40],
                  iconAnchor: [20,40],
                  popupAnchor: [0,-40]

                });

                const popupHTML = `
                  <b>${user.name}</b>
                  <div style="margin: 8px 0; color: #666; font-size: 13px;">
                    üèÄ <strong>Sport:</strong> ${user.interests || "Not specified"}<br>
                    üìç <strong>Distance:</strong> ${dist.toFixed(2)} km
                  </div>
                  <a href="/chat/${user._id}" class="chat-btn">üí¨ Start Chat</a>
                `;

                L.marker([user.location.latitude, user.location.longitude], { icon: userIcon })
                  .bindPopup(popupHTML)
                  .addTo(markers);
              }
            });

            map.addLayer(markers);
          })
          .catch(err => {
            console.error("Failed to fetch locations:", err);
            removeLoading();
          });
      }, () => {
        removeLoading();
        alert("Geolocation not supported or permission denied!");
      });
    } else {
      removeLoading();
      alert("Geolocation not supported by this browser.");
    }

    // Remove loading on map load
    map.on('load', removeLoading);
  </script>
</body>
</html>