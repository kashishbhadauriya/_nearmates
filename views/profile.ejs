<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Outfit', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    body::before,
    body::after {
      content: '';
      position: fixed;
      border-radius: 50%;
      pointer-events: none;
      z-index: 1;
      filter: blur(80px);
      opacity: 0.4;
    }

    body::before {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
      top: -150px;
      right: -150px;
      animation: float1 25s ease-in-out infinite;
    }

    body::after {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(139, 92, 246, 0.4) 0%, transparent 70%);
      bottom: -100px;
      left: -100px;
      animation: float2 30s ease-in-out infinite reverse;
    }

    @keyframes float1 {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(100px, 100px) rotate(90deg); }
      50% { transform: translate(50px, -50px) rotate(180deg); }
      75% { transform: translate(-50px, 50px) rotate(270deg); }
    }

    @keyframes float2 {
      0%, 100% { transform: translate(0, 0) rotate(0deg); }
      25% { transform: translate(-80px, 80px) rotate(-90deg); }
      50% { transform: translate(80px, -80px) rotate(-180deg); }
      75% { transform: translate(-40px, -40px) rotate(-270deg); }
    }

    .orb {
      position: fixed;
      border-radius: 50%;
      pointer-events: none;
      z-index: 1;
      filter: blur(60px);
      opacity: 0.3;
    }

    .orb1 {
      width: 350px;
      height: 350px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.3), transparent);
      top: 20%;
      right: 10%;
      animation: orbFloat1 20s ease-in-out infinite;
    }

    .orb2 {
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(147, 112, 219, 0.3), transparent);
      bottom: 20%;
      left: 15%;
      animation: orbFloat2 25s ease-in-out infinite reverse;
    }

    @keyframes orbFloat1 {
      0%, 100% { transform: translate(0, 0); }
      50% { transform: translate(-100px, 100px); }
    }

    @keyframes orbFloat2 {
      0%, 100% { transform: translate(0, 0); }
      50% { transform: translate(100px, -80px); }
    }

    .container {
      max-width: 950px;
      margin: 0 auto;
      padding: 50px 20px;
      position: relative;
      z-index: 3;
      min-height: 100vh;
    }

    .back-button-container {
      position: fixed;
      top: 25px;
      left: 25px;
      z-index: 1000;
    }

    .btn-chat {
      padding: 12px 28px;
      background: rgba(255, 255, 255, 0.95);
      color: #667eea;
      border: none;
      border-radius: 14px;
      cursor: pointer;
      font-weight: 700;
      font-size: 14px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      backdrop-filter: blur(10px);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-chat::before {
      content: "‚Üê ";
      font-size: 18px;
    }

    .btn-chat:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
      background: #ffffff;
    }

    .profile-card {
      background: rgba(255, 255, 255, 0.12);
      backdrop-filter: blur(30px);
      border-radius: 35px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 0;
      overflow: hidden;
      position: relative;
      box-shadow: 
        0 35px 70px rgba(0, 0, 0, 0.25),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
      animation: cardReveal 1s ease forwards;
      opacity: 0;
      transform: translateY(50px);
    }

    @keyframes cardReveal {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .profile-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.5; }
      50% { opacity: 1; }
    }

    .profile-header {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
      padding: 55px 50px 35px;
      text-align: center;
      position: relative;
      border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    }

    .avatar-section {
      position: relative;
      margin-bottom: 30px;
    }

    .avatar-ring {
      width: 190px;
      height: 190px;
      border-radius: 50%;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.6));
      padding: 5px;
      margin: 0 auto;
      animation: pulse 3s ease-in-out infinite;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2); }
      50% { transform: scale(1.03); box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3); }
    }

    #dpPreview {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      object-fit: cover;
      background: rgba(255, 255, 255, 0.1);
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      z-index: 1;
    }

    .upload-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 180px;
      height: 180px;
      border-radius: 50%;
      background: rgba(0, 0, 0, 0.6);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
      cursor: pointer;
      font-size: 2.8em;
      z-index: 2;
      backdrop-filter: blur(5px);
    }

    .avatar-section:hover .upload-overlay {
      opacity: 1;
    }

    .avatar-section:hover .avatar-ring {
      transform: scale(1.05);
    }

    .profile-title {
      color: #ffffff;
      font-size: 3.5em;
      font-weight: 800;
      margin-bottom: 12px;
      font-family: 'Space Grotesk', sans-serif;
      text-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      letter-spacing: -1px;
    }

    .profile-subtitle {
      color: rgba(255, 255, 255, 0.85);
      font-size: 1.15em;
      font-weight: 400;
      margin-bottom: 28px;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

    #uploadBtn {
      background: rgba(255, 255, 255, 0.95);
      border: none;
      padding: 14px 35px;
      border-radius: 30px;
      color: #667eea;
      font-weight: 700;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    #uploadBtn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
      background: #ffffff;
    }

    .profile-body {
      padding: 45px 50px 55px;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 28px;
      margin-bottom: 40px;
    }

    .form-group {
      position: relative;
      animation: slideUp 0.6s ease forwards;
      opacity: 0;
      transform: translateY(30px);
    }

    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.15s; }
    .form-group:nth-child(3) { animation-delay: 0.2s; }
    .form-group:nth-child(4) { animation-delay: 0.25s; }
    .form-group:nth-child(5) { animation-delay: 0.3s; }
    .form-group:nth-child(6) { animation-delay: 0.35s; }
    .form-group:nth-child(7) { animation-delay: 0.4s; }

    @keyframes slideUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-label {
      display: block;
      color: #ffffff;
      font-weight: 700;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1.2px;
      margin-bottom: 12px;
      opacity: 0.95;
      text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .form-input {
      width: 100%;
      padding: 18px 24px;
      background: rgba(255, 255, 255, 0.15);
      border: 1px solid rgba(255, 255, 255, 0.25);
      border-radius: 18px;
      color: #ffffff;
      font-size: 16px;
      font-family: 'Outfit', sans-serif;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      outline: none;
      backdrop-filter: blur(10px);
    }

    .form-input:focus {
      border-color: rgba(255, 255, 255, 0.5);
      background: rgba(255, 255, 255, 0.2);
      box-shadow: 
        0 0 0 4px rgba(255, 255, 255, 0.1),
        0 10px 35px rgba(0, 0, 0, 0.2);
      transform: translateY(-2px);
    }

    .form-input:disabled {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(255, 255, 255, 0.15);
      color: rgba(255, 255, 255, 0.6);
      cursor: not-allowed;
    }

    .form-input::placeholder {
      color: rgba(255, 255, 255, 0.5);
    }

    .textarea-group {
      grid-column: 1 / -1;
    }

    .form-textarea {
      min-height: 130px;
      resize: vertical;
      font-family: 'Outfit', sans-serif;
    }

    .location-section {
      grid-column: 1 / -1;
      text-align: center;
      padding: 30px;
      background: rgba(255, 255, 255, 0.08);
      border-radius: 22px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(10px);
    }

    .location-btn {
      background: rgba(255, 255, 255, 0.95);
      border: none;
      padding: 16px 40px;
      border-radius: 35px;
      color: #667eea;
      font-weight: 700;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.4s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      text-decoration: none;
      display: inline-block;
    }

    .location-btn:hover {
      transform: translateY(-3px) scale(1.03);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
      background: #ffffff;
    }

    .action-section {
      display: flex;
      gap: 22px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 45px;
      animation: slideUp 0.6s ease forwards;
      animation-delay: 0.5s;
      opacity: 0;
      transform: translateY(30px);
    }

    .action-btn {
      padding: 18px 45px;
      border-radius: 35px;
      font-weight: 700;
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 1px;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: none;
      position: relative;
      overflow: hidden;
      min-width: 200px;
    }

    .btn-primary {
      background: rgba(255, 255, 255, 0.95);
      color: #667eea;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
      background: rgba(255, 255, 255, 0.85);
      color: #764ba2;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .action-btn:hover {
      transform: translateY(-4px) scale(1.02);
      box-shadow: 0 18px 45px rgba(0, 0, 0, 0.35);
      background: #ffffff;
    }

    .action-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.6s;
    }

    .action-btn:hover::before {
      left: 100%;
    }

    /* Loading states */
    .loading-dots {
      display: inline-block;
      position: relative;
      width: 20px;
      height: 20px;
    }

    .loading-dots div {
      position: absolute;
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: currentColor;
      animation: loading-dots 1.2s linear infinite;
    }

    .loading-dots div:nth-child(1) { animation-delay: 0s; left: 2px; }
    .loading-dots div:nth-child(2) { animation-delay: -0.4s; left: 8px; }
    .loading-dots div:nth-child(3) { animation-delay: -0.8s; left: 14px; }

    @keyframes loading-dots {
      0%, 80%, 100% { transform: scale(0); opacity: 0.5; }
      40% { transform: scale(1); opacity: 1; }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 25px 15px;
      }
      
      .profile-header, .profile-body {
        padding: 35px 30px;
      }
      
      .profile-title {
        font-size: 2.8em;
      }
      
      .form-grid {
        grid-template-columns: 1fr;
        gap: 22px;
      }
      
      .action-section {
        flex-direction: column;
        align-items: center;
      }
      
      .action-btn {
        width: 100%;
        max-width: 300px;
      }

      .back-button-container {
        top: 15px;
        left: 15px;
      }
    }

    /* Success/Error states */
    .success-state {
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.95), rgba(5, 150, 105, 0.95)) !important;
      color: white !important;
    }

    .error-state {
      background: linear-gradient(135deg, rgba(239, 68, 68, 0.95), rgba(220, 38, 38, 0.95)) !important;
      color: white !important;
    }

    /* Hidden elements */
    .hidden {
      display: none;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 10px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.1);
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.3));
      border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.5));
    }
  </style>
</head>
<body>
  <div class="orb orb1"></div>
  <div class="orb orb2"></div>
 
  <div class="back-button-container">
    <button type="button" class="btn-chat" onclick="window.history.back()">
      Back
    </button>
  </div>
  
  <div class="container">
    <div class="profile-card">
      <div class="profile-header">
        <div class="avatar-section">
          <div class="avatar-ring">
           <img id="dpPreview" src="<%= (user && user.dp) ? user.dp : '/default-dp.png' %>" alt="">

          </div>
          <div class="upload-overlay">
            üì∏
          </div>
        </div>
        <h1 class="profile-title"><%= user.name %></h1>
        <p class="profile-subtitle">Customize your profile information</p>
        <button type="button" id="uploadBtn">üì∑ Upload Photo</button>
      </div>

      <div class="profile-body">
        <form id="profileForm" action="/update-profile" method="POST" enctype="multipart/form-data">
          <input type="file" name="dp" id="dpUpload" accept="image/*" style="display:none;">
          
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label">Date of Birth</label>
              <input type="date" name="dob" value="<%= user.dob || '' %>" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Occupation</label>
              <input type="text" name="occupation" value="<%= user.occupation || '' %>" 
                     placeholder="What do you do?" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">State</label>
              <input type="text" name="state" value="<%= user.state || '' %>" 
                     placeholder="Your state" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">City</label>
              <input type="text" name="city" value="<%= user.city || '' %>" 
                     placeholder="Your city" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Interests</label>
              <input type="text" name="interests" value="<%= user.interests || '' %>" 
                     placeholder="Your hobbies & interests" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Favorite Sports</label>
              <input type="text" name="favSports" value="<%= user.favSports || '' %>" 
                     placeholder="Sports you love" class="form-input">
            </div>

            <div class="location-section">
              <label class="form-label">üìç Location Services</label>
              <a href="#" id="location-btn" class="location-btn">Enable Location</a>
            </div>

            <div class="form-group textarea-group">
              <label class="form-label">About Me</label>
              <textarea name="about" placeholder="Tell everyone about yourself..." 
                        class="form-input form-textarea"><%= user.about || '' %></textarea>
            </div>
          </div>

          <div class="action-section">
            <button type="submit" id="saveBtn" class="action-btn btn-primary hidden">üíæ Save Changes</button>
            <button type="button" id="editBtn" class="action-btn btn-primary">‚úèÔ∏è Edit Profile</button>
            <a href="/dashboard" class="action-btn btn-secondary">üè† Dashboard</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Form state management
    const formInputs = document.querySelectorAll('.form-input');
    const editBtn = document.getElementById('editBtn');
    const saveBtn = document.getElementById('saveBtn');

    // Initially disable all inputs
    formInputs.forEach(input => input.disabled = true);

    // Edit button functionality
    editBtn.addEventListener('click', () => {
      formInputs.forEach(input => input.disabled = false);
      editBtn.classList.add('hidden');
      saveBtn.classList.remove('hidden');
      
      // Add edit mode visual feedback
      document.querySelector('.profile-card').style.borderColor = 'rgba(255, 255, 255, 0.4)';
    });

    // Location functionality
    document.getElementById("location-btn").addEventListener("click", function (e) {
      e.preventDefault();
      const btn = this;
      const originalText = btn.textContent;
      const originalClass = btn.className;
      
      btn.innerHTML = '<div class="loading-dots"><div></div><div></div><div></div></div> Getting Location...';
      btn.style.pointerEvents = 'none';
      
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          function (position) {
            btn.textContent = '‚úÖ Location Enabled';
            btn.className = originalClass + ' success-state';
            
            setTimeout(() => {
              btn.textContent = originalText;
              btn.className = originalClass;
              btn.style.pointerEvents = 'auto';
            }, 3000);
            
            alert("üéØ Location Access Granted!\nLatitude: " + position.coords.latitude.toFixed(6) + 
                  "\nLongitude: " + position.coords.longitude.toFixed(6));
                  
            fetch("/save-location", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                latitude: position.coords.latitude,
                longitude: position.coords.longitude
              })
            });
          },
          function (error) {
            btn.textContent = '‚ùå Access Denied';
            btn.className = originalClass + ' error-state';
            
            setTimeout(() => {
              btn.textContent = originalText;
              btn.className = originalClass;
              btn.style.pointerEvents = 'auto';
            }, 3000);
            
            if (error.code === error.PERMISSION_DENIED) {
              alert("üö´ Location access was denied. Please enable location services.");
            } else {
              alert("‚ö†Ô∏è Error getting location: " + error.message);
            }
          }
        );
      } else {
        btn.textContent = '‚ùå Not Supported';
        btn.className = originalClass + ' error-state';
        
        setTimeout(() => {
          btn.textContent = originalText;
          btn.className = originalClass;
          btn.style.pointerEvents = 'auto';
        }, 3000);
        
        alert("üì± Geolocation is not supported by this browser.");
      }
    });

    // Profile picture upload
    const dpUpload = document.getElementById("dpUpload");
    const dpPreview = document.getElementById("dpPreview");
    const uploadBtn = document.getElementById("uploadBtn");

    uploadBtn.addEventListener("click", () => {
      dpUpload.click();
    });

    document.querySelector('.avatar-section').addEventListener("click", () => {
      dpUpload.click();
    });

    dpUpload.addEventListener("change", () => {
      const file = dpUpload.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          dpPreview.src = e.target.result;
          uploadBtn.innerHTML = "üì∑ Change Photo";
          
          // Animate the change
          dpPreview.style.transform = 'scale(1.1)';
          setTimeout(() => {
            dpPreview.style.transform = 'scale(1)';
          }, 400);
        };
        reader.readAsDataURL(file);
      }
    });

    // Enhanced input interactions
    formInputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentElement.style.transform = 'translateY(-2px)';
      });
      
      input.addEventListener('blur', function() {
        this.parentElement.style.transform = 'translateY(0)';
      });
    });

    document.getElementById('profileForm').addEventListener('submit', function(e) {
      const submitBtn = document.getElementById('saveBtn');
      const originalText = submitBtn.textContent;
      
      submitBtn.innerHTML = '<div class="loading-dots"><div></div><div></div><div></div></div> Saving...';
      submitBtn.style.pointerEvents = 'none';
    });
  </script>
</body>
</html>