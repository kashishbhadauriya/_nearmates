<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <style>
  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #667eea, #764ba2, #f093fb, #f5576c, #4facfe, #00f2fe);
  background-size: 400% 400%;
  animation: gradientFlow 15s ease infinite;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: stretch; /* Stretch vertically */
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.container {
  width: 100%;
  height: 100vh; /* Full screen height */
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  padding: 40px 50px;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  border: none;
}

.profile-header {
  text-align: center;
  margin-bottom: 30px;
}

.profile-header .icon {
  font-size: 5em;
  margin-bottom: 15px;
}

.profile-header h2 {
  font-size: 2.5em;
  color: #fff;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
}

.profile-body {
  flex: 1; /* Take remaining space */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.profile-item {
  margin-bottom: 18px;
  font-size: 16px;
  color: #fff;
}

.profile-item label {
  display: block;
  margin-bottom: 6px;
  font-weight: 600;
}

input, textarea {
  width: 100%;
  padding: 12px 15px;
  border-radius: 12px;
  border: none;
  outline: none;
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 15px;
  transition: all 0.3s ease;
}

input:disabled, textarea:disabled {
  background: rgba(255,255,255,0.1);
  color: #ccc;
}

input:focus, textarea:focus {
  background: rgba(255,255,255,0.35);
  box-shadow: 0 0 10px rgba(255,255,255,0.5);
}

.profile-actions {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 25px;
  gap: 10px;
}

.edit-btn, .back-btn {
  padding: 12px 25px;
  border-radius: 25px;
  text-decoration: none;
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  border: none;
  font-size: 14px;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
  text-align: center;
  flex: 1; /* Fill space */
}

.edit-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.back-btn {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.edit-btn:hover, .back-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.2);
}

#dpPreview {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  object-fit: cover;
  margin: 0 auto 10px;
  display: block;
  border: 3px solid rgba(255,255,255,0.7);
  cursor: pointer;
  transition: all 0.3s ease;
}

#dpPreview:hover {
  transform: scale(1.05);
  border-color: #fff;
}

#uploadBtn {
  margin-top: 8px;
}

  </style>
</head>
<body>
  <div class="container">
    <div class="profile-header">
      <span class="icon">ðŸ‘¤</span>
      <h2><%= user.username %></h2>
    </div>

    <div class="profile-body">
      <!-- enctype is required for file upload -->
      <form id="profileForm" action="/update-profile" method="POST" enctype="multipart/form-data">
        
        <!-- Profile Picture Upload -->
        <div class="profile-item" style="text-align:center;">
        
          <div>
            <img id="dpPreview" 
                 src="<%= user.dp || '/default-dp.png' %>" 
                 alt="Profile Picture" 
                 style="width:120px; height:120px; border-radius:50%; object-fit:cover; margin:10px auto; display:block; border:2px solid #667eea; cursor:pointer;">
          </div>
          <input type="file" name="dp" id="dpUpload" accept="image/*" style="display:none;">
          <button type="button" class="edit-btn" id="uploadBtn">Upload DP</button>
        </div>

        <!-- Other Profile Fields -->
        <div class="profile-item">
          <label>Date of Birth:</label>
          <input type="date" name="dob" value="<%= user.dob || '' %>">
        </div>

        <div class="profile-item">
          <label>Occupation:</label>
          <input type="text" name="occupation" value="<%= user.occupation || '' %>">
        </div>

        <div class="profile-item">
          <label>State:</label>
          <input type="text" name="state" value="<%= user.state || '' %>">
        </div>

        <div class="profile-item">
          <label>City:</label>
          <input type="text" name="city" value="<%= user.city || '' %>">
        </div>

        <div class="profile-item">
          <label>Interests:</label>
          <input type="text" name="interests" value="<%= user.interests || '' %>">
        </div>

        <!-- Location -->
        <div class="profile-item">
          <label>Location:</label>
          <a href="#" id="location-btn" class="back-btn">On</a>
        </div>

        <div class="profile-item">
          <label>Favorite Sports:</label>
          <input type="text" name="favSports" value="<%= user.favSports || '' %>">
        </div>

        <div class="profile-item">
          <label>About Me:</label>
          <textarea name="about"><%= user.about || '' %></textarea>
        </div>

        <!-- Action Buttons -->
        <div class="profile-actions">
          <button type="submit" id="saveBtn" class="edit-btn" style="display:none;">Save Profile</button>
          <button type="button" class="edit-btn" id="editBtn">Edit Profile</button>
          <a href="/dashboard" class="back-btn">Back to Dashboard</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Disable inputs initially
    const formInputs = document.querySelectorAll('input, textarea');
    const editBtn = document.getElementById('editBtn');
    const saveBtn = document.getElementById('saveBtn');

    formInputs.forEach(input => input.disabled = true);

    editBtn.addEventListener('click', () => {
      formInputs.forEach(input => input.disabled = false);
      editBtn.style.display = 'none';
      saveBtn.style.display = 'inline-block';
    });

    // Location script
    document.getElementById("location-btn").addEventListener("click", function (e) {
      e.preventDefault();
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          function (position) {
            alert(" Location Access Granted\nLat: " + position.coords.latitude + 
                  "\nLng: " + position.coords.longitude);
            fetch("/save-location", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                latitude: position.coords.latitude,
                longitude: position.coords.longitude
              })
            });
          },
          function (error) {
            if (error.code === error.PERMISSION_DENIED) {
              alert(" Location Access Denied");
            } else {
              alert(" Error getting location");
            }
          }
        );
      } else {
        alert("Geolocation is not supported by this browser.");
      }
    });

    // DP Upload + Preview
    const dpUpload = document.getElementById("dpUpload");
    const dpPreview = document.getElementById("dpPreview");
    const uploadBtn = document.getElementById("uploadBtn");

    uploadBtn.addEventListener("click", () => {
      dpUpload.click();
    });

    dpPreview.addEventListener("click", () => {
      dpUpload.click();
    });

    dpUpload.addEventListener("change", () => {
      const file = dpUpload.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          dpPreview.src = e.target.result; // Show preview
          uploadBtn.textContent = "Change DP";
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
</body>
</html>
