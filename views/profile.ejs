<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Outfit', sans-serif;
      background: #0a0a0f;
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Animated mesh gradient background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.2) 0%, transparent 50%),
        radial-gradient(circle at 90% 90%, rgba(255, 204, 112, 0.2) 0%, transparent 50%),
        linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 50%, #16213e 100%);
      z-index: 1;
      animation: meshMove 20s ease-in-out infinite;
    }

    @keyframes meshMove {
      0%, 100% { 
        filter: hue-rotate(0deg) brightness(1);
        transform: scale(1);
      }
      50% { 
        filter: hue-rotate(90deg) brightness(1.1);
        transform: scale(1.05);
      }
    }

    /* Floating orbs */
    .orb {
      position: fixed;
      border-radius: 50%;
      pointer-events: none;
      z-index: 2;
    }

    .orb1 {
      width: 300px;
      height: 300px;
      background: linear-gradient(45deg, rgba(255, 0, 150, 0.1), rgba(0, 255, 255, 0.1));
      top: -150px;
      right: -150px;
      animation: float1 25s ease-in-out infinite;
      filter: blur(2px);
    }

    .orb2 {
      width: 200px;
      height: 200px;
      background: linear-gradient(45deg, rgba(255, 100, 0, 0.1), rgba(100, 0, 255, 0.1));
      bottom: -100px;
      left: -100px;
      animation: float2 30s ease-in-out infinite reverse;
      filter: blur(2px);
    }

    @keyframes float1 {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-100px) rotate(180deg); }
    }

    @keyframes float2 {
      0%, 100% { transform: translateX(0px) rotate(0deg); }
      50% { transform: translateX(100px) rotate(-180deg); }
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 40px 20px;
      position: relative;
      z-index: 3;
      min-height: 100vh;
    }

    .profile-card {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(20px);
      border-radius: 32px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      padding: 0;
      overflow: hidden;
      position: relative;
      box-shadow: 
        0 30px 60px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
      animation: cardReveal 1s ease forwards;
      opacity: 0;
      transform: translateY(50px);
    }

    @keyframes cardReveal {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .profile-header {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
      padding: 50px 50px 30px;
      text-align: center;
      position: relative;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .profile-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, #ff0096, #00d4ff, transparent);
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 1; }
    }

    .avatar-section {
      position: relative;
      margin-bottom: 30px;
    }

    .avatar-ring {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      background: conic-gradient(from 0deg, #ff0096, #00d4ff, #7f00ff, #ff0096);
      padding: 4px;
      margin: 0 auto;
      animation: rotate 10s linear infinite;
    }

    @keyframes rotate {
      to { transform: rotate(360deg); }
    }

    #dpPreview {
      width: 172px;
      height: 172px;
      border-radius: 50%;
      object-fit: cover;
      background: #1a1a2e;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      z-index: 1;
    }

    .upload-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 172px;
      height: 172px;
      border-radius: 50%;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
      cursor: pointer;
      font-size: 2.5em;
      z-index: 2;
    }

    .avatar-section:hover .upload-overlay {
      opacity: 1;
    }

    .profile-title {
      color: #ffffff;
      font-size: 3.2em;
      font-weight: 700;
      margin-bottom: 10px;
      font-family: 'Space Grotesk', sans-serif;
      background: linear-gradient(135deg, #ffffff 0%, #a0a0ff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: titleGlow 2s ease-in-out infinite alternate;
    }

    @keyframes titleGlow {
      0% { filter: drop-shadow(0 0 10px rgba(160, 160, 255, 0.3)); }
      100% { filter: drop-shadow(0 0 20px rgba(160, 160, 255, 0.6)); }
    }

    .profile-subtitle {
      color: rgba(255, 255, 255, 0.6);
      font-size: 1.1em;
      font-weight: 400;
      margin-bottom: 25px;
    }

    #uploadBtn {
      background: linear-gradient(135deg, #ff0096 0%, #7f00ff 100%);
      border: none;
      padding: 12px 30px;
      border-radius: 25px;
      color: white;
      font-weight: 600;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 8px 25px rgba(255, 0, 150, 0.3);
    }

    #uploadBtn:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(255, 0, 150, 0.4);
    }

    .profile-body {
      padding: 40px 50px 50px;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 25px;
      margin-bottom: 35px;
    }

    .form-group {
      position: relative;
      animation: slideUp 0.6s ease forwards;
      opacity: 0;
      transform: translateY(30px);
    }

    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.2s; }
    .form-group:nth-child(3) { animation-delay: 0.3s; }
    .form-group:nth-child(4) { animation-delay: 0.4s; }
    .form-group:nth-child(5) { animation-delay: 0.5s; }
    .form-group:nth-child(6) { animation-delay: 0.6s; }
    .form-group:nth-child(7) { animation-delay: 0.7s; }

    @keyframes slideUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-label {
      display: block;
      color: #ffffff;
      font-weight: 600;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 12px;
      opacity: 0.9;
    }

    .form-input {
      width: 100%;
      padding: 18px 24px;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      color: #ffffff;
      font-size: 16px;
      font-family: 'Outfit', sans-serif;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      outline: none;
    }

    .form-input:focus {
      border-color: #ff0096;
      background: rgba(255, 255, 255, 0.08);
      box-shadow: 
        0 0 0 3px rgba(255, 0, 150, 0.1),
        0 8px 30px rgba(0, 0, 0, 0.2);
      transform: translateY(-2px);
    }

    .form-input:disabled {
      background: rgba(255, 255, 255, 0.02);
      border-color: rgba(255, 255, 255, 0.05);
      color: rgba(255, 255, 255, 0.5);
      cursor: not-allowed;
    }

    .form-input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .textarea-group {
      grid-column: 1 / -1;
    }

    .form-textarea {
      min-height: 120px;
      resize: vertical;
      font-family: 'Outfit', sans-serif;
    }

    .location-section {
      grid-column: 1 / -1;
      text-align: center;
      padding: 25px;
      background: rgba(255, 255, 255, 0.02);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .location-btn {
      background: linear-gradient(135deg, #00d4ff 0%, #7f00ff 100%);
      border: none;
      padding: 15px 35px;
      border-radius: 30px;
      color: white;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.4s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
      text-decoration: none;
      display: inline-block;
    }

    .location-btn:hover {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 12px 35px rgba(0, 212, 255, 0.4);
    }

    .action-section {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 40px;
      animation: slideUp 0.6s ease forwards;
      animation-delay: 0.8s;
      opacity: 0;
      transform: translateY(30px);
    }

    .action-btn {
      padding: 18px 40px;
      border-radius: 30px;
      font-weight: 600;
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 1px;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      border: none;
      position: relative;
      overflow: hidden;
      min-width: 180px;
    }

    .btn-primary {
      background: linear-gradient(135deg, #ff0096 0%, #7f00ff 100%);
      color: white;
      box-shadow: 0 8px 25px rgba(255, 0, 150, 0.3);
    }

    .btn-secondary {
      background: linear-gradient(135deg, #00d4ff 0%, #0096ff 100%);
      color: white;
      box-shadow: 0 8px 25px rgba(0, 150, 255, 0.3);
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    .action-btn:hover {
      transform: translateY(-4px) scale(1.02);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    }

    .action-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.6s;
    }

    .action-btn:hover::before {
      left: 100%;
    }

    /* Loading states */
    .loading-dots {
      display: inline-block;
      position: relative;
      width: 20px;
      height: 20px;
    }

    .loading-dots div {
      position: absolute;
      width: 4px;
      height: 4px;
      border-radius: 50%;
      background: currentColor;
      animation: loading-dots 1.2s linear infinite;
    }

    .loading-dots div:nth-child(1) { animation-delay: 0s; left: 2px; }
    .loading-dots div:nth-child(2) { animation-delay: -0.4s; left: 8px; }
    .loading-dots div:nth-child(3) { animation-delay: -0.8s; left: 14px; }

    @keyframes loading-dots {
      0%, 80%, 100% { transform: scale(0); opacity: 0.5; }
      40% { transform: scale(1); opacity: 1; }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 20px 10px;
      }
      
      .profile-header, .profile-body {
        padding: 30px 25px;
      }
      
      .profile-title {
        font-size: 2.5em;
      }
      
      .form-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
      
      .action-section {
        flex-direction: column;
        align-items: center;
      }
      
      .action-btn {
        width: 100%;
        max-width: 280px;
      }
    }

    /* Success/Error states */
    .success-state {
      background: linear-gradient(135deg, #00ff88 0%, #00d4ff 100%) !important;
    }

    .error-state {
      background: linear-gradient(135deg, #ff4757 0%, #ff3838 100%) !important;
    }

    /* Hidden elements */
    .hidden {
      display: none;
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, #ff0096, #7f00ff);
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <div class="orb orb1"></div>
  <div class="orb orb2"></div>
  
  <div class="container">
    <div class="profile-card">
      <div class="profile-header">
        <div class="avatar-section">
          <div class="avatar-ring">
            <img id="dpPreview" 
                 src="<%= user.dp || '/default-dp.png' %>" 
                 alt="">
          </div>
          <div class="upload-overlay">
            üì∏
          </div>
        </div>
        <h1 class="profile-title"><%= user.username %></h1>
        <p class="profile-subtitle">Customize your profile information</p>
        <button type="button" id="uploadBtn">üì∑ Upload Photo</button>
      </div>

      <div class="profile-body">
        <form id="profileForm" action="/update-profile" method="POST" enctype="multipart/form-data">
          <input type="file" name="dp" id="dpUpload" accept="image/*" style="display:none;">
          
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label">Date of Birth</label>
              <input type="date" name="dob" value="<%= user.dob || '' %>" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Occupation</label>
              <input type="text" name="occupation" value="<%= user.occupation || '' %>" 
                     placeholder="What do you do?" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">State</label>
              <input type="text" name="state" value="<%= user.state || '' %>" 
                     placeholder="Your state" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">City</label>
              <input type="text" name="city" value="<%= user.city || '' %>" 
                     placeholder="Your city" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Interests</label>
              <input type="text" name="interests" value="<%= user.interests || '' %>" 
                     placeholder="Your hobbies & interests" class="form-input">
            </div>

            <div class="form-group">
              <label class="form-label">Favorite Sports</label>
              <input type="text" name="favSports" value="<%= user.favSports || '' %>" 
                     placeholder="Sports you love" class="form-input">
            </div>

            <div class="location-section">
              <label class="form-label">üìç Location Services</label>
              <a href="#" id="location-btn" class="location-btn">Enable Location</a>
            </div>

            <div class="form-group textarea-group">
              <label class="form-label">About Me</label>
              <textarea name="about" placeholder="Tell everyone about yourself..." 
                        class="form-input form-textarea"><%= user.about || '' %></textarea>
            </div>
          </div>

          <div class="action-section">
            <button type="submit" id="saveBtn" class="action-btn btn-primary hidden"> Save Changes</button>
            <button type="button" id="editBtn" class="action-btn btn-primary"> Edit Profile</button>
            <a href="/dashboard" class="action-btn btn-secondary"> Dashboard</a>
          </div>
        </form>
      </div>
    </div>
  </div>



  <!-- Scripts -->
  <script>
    // Form state management
    const formInputs = document.querySelectorAll('.form-input');
    const editBtn = document.getElementById('editBtn');
    const saveBtn = document.getElementById('saveBtn');

    // Initially disable all inputs
    formInputs.forEach(input => input.disabled = true);

    // Edit button functionality
    editBtn.addEventListener('click', () => {
      formInputs.forEach(input => input.disabled = false);
      editBtn.classList.add('hidden');
      saveBtn.classList.remove('hidden');
      
      // Add edit mode visual feedback
      document.querySelector('.profile-card').style.borderColor = 'rgba(255, 0, 150, 0.3)';
    });

    // Location functionality
    document.getElementById("location-btn").addEventListener("click", function (e) {
      e.preventDefault();
      const btn = this;
      const originalText = btn.textContent;
      const originalClass = btn.className;
      
      btn.innerHTML = '<div class="loading-dots"><div></div><div></div><div></div></div> Getting Location...';
      btn.style.pointerEvents = 'none';
      
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          function (position) {
            btn.textContent = '‚úÖ Location Enabled';
            btn.className = originalClass + ' success-state';
            
            setTimeout(() => {
              btn.textContent = originalText;
              btn.className = originalClass;
              btn.style.pointerEvents = 'auto';
            }, 3000);
            
            alert("üéØ Location Access Granted!\nLatitude: " + position.coords.latitude.toFixed(6) + 
                  "\nLongitude: " + position.coords.longitude.toFixed(6));
                  
            fetch("/save-location", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                latitude: position.coords.latitude,
                longitude: position.coords.longitude
              })
            });
          },
          function (error) {
            btn.textContent = '‚ùå Access Denied';
            btn.className = originalClass + ' error-state';
            
            setTimeout(() => {
              btn.textContent = originalText;
              btn.className = originalClass;
              btn.style.pointerEvents = 'auto';
            }, 3000);
            
            if (error.code === error.PERMISSION_DENIED) {
              alert("üö´ Location access was denied. Please enable location services.");
            } else {
              alert("‚ö†Ô∏è Error getting location: " + error.message);
            }
          }
        );
      } else {
        btn.textContent = '‚ùå Not Supported';
        btn.className = originalClass + ' error-state';
        
        setTimeout(() => {
          btn.textContent = originalText;
          btn.className = originalClass;
          btn.style.pointerEvents = 'auto';
        }, 3000);
        
        alert("üì± Geolocation is not supported by this browser.");
      }
    });

    // Profile picture upload
    const dpUpload = document.getElementById("dpUpload");
    const dpPreview = document.getElementById("dpPreview");
    const uploadBtn = document.getElementById("uploadBtn");

    uploadBtn.addEventListener("click", () => {
      dpUpload.click();
    });

    document.querySelector('.avatar-section').addEventListener("click", () => {
      dpUpload.click();
    });

    dpUpload.addEventListener("change", () => {
      const file = dpUpload.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          dpPreview.src = e.target.result;
          uploadBtn.innerHTML = "üì∑ Change Photo";
          
          // Animate the change
          dpPreview.style.transform = 'scale(1.1)';
          setTimeout(() => {
            dpPreview.style.transform = 'scale(1)';
          }, 400);
        };
        reader.readAsDataURL(file);
      }
    });

    // Enhanced input interactions
    formInputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentElement.style.transform = 'translateY(-2px)';
      });
      
      input.addEventListener('blur', function() {
        this.parentElement.style.transform = 'translateY(0)';
      });
    });

    document.getElementById('profileForm').addEventListener('submit', function(e) {
      const submitBtn = document.getElementById('saveBtn');
      const originalText = submitBtn.textContent;
      
      submitBtn.innerHTML = '<div class="loading-dots"><div></div><div></div><div></div></div> Saving...';
      submitBtn.style.pointerEvents = 'none';
    });
  </script>
</body>
</html>