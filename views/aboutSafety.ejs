    <script>
        const headers = document.querySelectorAll('.section-header');

        function setExpanded(header, expanded) {
            header.setAttribute('aria-expanded', String(expanded));
        }

        function closeOthers(currentContent) {
            document.querySelectorAll('.section-content.open').forEach(openContent => {
                if (openContent !== currentContent) {
                    openContent.classList.remove('open');
                    openContent.style.maxHeight = null;
                    const prevHeader = openContent.previousElementSibling;
                    setExpanded(prevHeader, false);
                }
            });
        }

        function toggleSection(header) {
            const content = header.nextElementSibling;
            const isOpen = content.classList.contains('open');

            closeOthers(content);

            if (isOpen) {
                content.classList.remove('open');
                content.style.maxHeight = null;
                setExpanded(header, false);
            } else {
                content.classList.add('open');
                content.style.maxHeight = content.scrollHeight + 'px';
                setExpanded(header, true);
            }
        }

        headers.forEach(header => {
            header.addEventListener('click', () => toggleSection(header));
            header.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    toggleSection(header);
                }
            });
        });

        // Initialize open panels to proper heights
        document.querySelectorAll('.section-content.open').forEach(el => {
            el.style.maxHeight = el.scrollHeight + 'px';
        });

        // Dynamic year
        document.getElementById('year').textContent = new Date().getFullYear();
    </script>
