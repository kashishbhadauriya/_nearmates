    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #0e0f13;
            --surface: rgba(22, 23, 28, 0.8);
            --surface-strong: rgba(30, 31, 38, 0.8);
            --text: #e6e7ea;
            --muted: #b8bac2;
            --primary: #8A2BE2; /* electric purple */
            --accent: #00FFFF;  /* aqua */
            --ring: rgba(0, 255, 255, 0.35);
            --border: rgba(255, 255, 255, 0.08);
            --card-border: rgba(255, 255, 255, 0.12);
            --shadow: rgba(0, 0, 0, 0.35);
            --radius: 18px;
            --radius-sm: 12px;
            --space: 20px;
            --space-lg: 30px;
            --container-w: 900px;
        }

        /* RESET */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* BODY & BACKGROUND */
        body {
            font-family: 'Roboto', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 30px 20px 60px;
            overflow: auto;
            position: relative;
        }

        body::before,
        body::after {
            content: '';
            position: fixed;
            inset: 0;
            z-index: -2;
            background:
                radial-gradient(1000px 600px at 10% 10%, rgba(138, 43, 226, 0.18), transparent 60%),
                radial-gradient(900px 600px at 90% 90%, rgba(0, 255, 255, 0.15), transparent 60%);
            filter: blur(0.5px);
        }

        body::after {
            z-index: -1;
            background:
                radial-gradient(650px 450px at 20% 80%, rgba(21, 180, 255, 0.08), transparent 55%),
                radial-gradient(700px 500px at 80% 15%, rgba(214, 120, 255, 0.08), transparent 55%);
            mix-blend-mode: screen;
        }

        /* CONTAINER */
        .container {
            width: var(--container-w);
            max-width: 100%;
            background: var(--surface);
            -webkit-backdrop-filter: blur(18px);
            backdrop-filter: blur(18px);
            border-radius: var(--radius);
            border: 1px solid var(--border);
            box-shadow: 0 12px 40px var(--shadow);
            padding: 42px 36px;
            animation: fadeIn 0.8s ease-out;
            position: relative;
            overflow: hidden;
        }

        /* subtle gradient border glow */
        .container::before {
            content: "";
            position: absolute;
            inset: -2px;
            border-radius: calc(var(--radius) + 2px);
            background: conic-gradient(from 180deg at 50% 50%, rgba(138, 43, 226, 0.2), rgba(0, 255, 255, 0.2), rgba(138, 43, 226, 0.2));
            filter: blur(18px);
            opacity: 0.35;
            z-index: -1;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(16px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* HEADER */
        h1 {
            font-size: 2.6em;
            text-align: center;
            margin-bottom: 28px;
            font-weight: 700;
            background: linear-gradient(90deg, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 12px rgba(138, 43, 226, 0.35);
            letter-spacing: 0.3px;
        }

        .subtitle {
            text-align: center;
            color: var(--muted);
            margin-bottom: 28px;
            font-size: 1em;
        }

        /* STATS GRID */
        .stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
            margin-bottom: 28px;
        }

        .stat {
            background: var(--surface-strong);
            border: 1px solid var(--card-border);
            border-radius: var(--radius-sm);
            padding: 16px 14px;
            text-align: center;
            box-shadow: 0 6px 18px var(--shadow);
            transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
        }
        .stat:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(0, 255, 255, 0.2);
            border-color: rgba(0, 255, 255, 0.25);
        }
        .stat .value {
            display: block;
            font-size: 1.6em;
            font-weight: 700;
            color: #fff;
        }
        .stat .label {
            color: var(--muted);
            font-size: 0.9em;
            margin-top: 4px;
        }

        /* SECTION HEADER (Accordion) */
        .section {
            margin-top: 18px;
        }

        .section-header {
            display: flex;
            align-items: center;
            cursor: pointer;
            padding: 16px 18px;
            border-radius: var(--radius-sm);
            background: var(--surface-strong);
            transition: transform 0.25s ease, box-shadow 0.25s ease, background 0.25s ease, border-color 0.25s ease;
            position: relative;
            overflow: hidden;
            border: 1px solid var(--border);
            font-size: 1.05em;
            font-weight: 600;
            outline: none;
        }

        .section-header:focus-visible {
            box-shadow: 0 0 0 3px var(--ring);
        }

        .section-header:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 255, 255, 0.18);
            background: rgba(45, 46, 56, 0.82);
            border-color: rgba(0, 255, 255, 0.22);
        }

        .section-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -120%;
            width: 120%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(138, 43, 226, 0.12), transparent);
            transition: transform 0.6s ease;
            transform: translateX(0);
        }

        .section-header:hover::before {
            transform: translateX(220%);
        }

        .section-header .icon {
            font-size: 1.35em;
            margin-right: 14px;
            color: var(--accent);
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .chevron {
            margin-left: auto;
            width: 18px;
            height: 18px;
            display: inline-block;
            position: relative;
            transition: transform 0.35s ease;
        }

        .chevron::before,
        .chevron::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 10px;
            height: 2px;
            background: var(--muted);
            transform-origin: center;
            transition: background 0.3s ease;
        }

        .chevron::before { transform: translate(-70%, -50%) rotate(45deg); }
        .chevron::after { transform: translate(-30%, -50%) rotate(-45deg); }

        .section-header[aria-expanded="true"] .chevron {
            transform: rotate(90deg);
        }

        /* SECTION CONTENT */
        .section-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s cubic-bezier(0.5, 0, 0.1, 1), padding 0.3s ease, border-color 0.3s ease;
            color: var(--muted);
            padding: 0 18px;
            line-height: 1.7;
            font-size: 0.98em;
            border-left: 2px solid rgba(138, 43, 226, 0.35);
            margin-top: 10px;
            border-radius: 0 0 0 var(--radius-sm);
        }

        .section-content.open {
            border-color: rgba(0, 255, 255, 0.6);
            padding-bottom: 18px;
        }

        .section-content p {
            margin: 10px 0;
        }

        ul {
            list-style: none;
            margin: 10px 0 14px 0;
        }

        li {
            margin-bottom: 10px;
            position: relative;
            padding-left: 25px;
            display: flex;
            align-items: flex-start;
        }

        li::before {
            content: "‚Ä¢";
            position: absolute;
            left: 0;
            top: 0;
            color: var(--accent);
            font-size: 1.5em;
            line-height: 1;
        }

        strong {
            color: #ffffff;
            font-weight: 600;
        }

        /* CTA BUTTONS */
        .actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
            margin-top: 26px;
        }

        .btn {
            display: inline-block;
            background: linear-gradient(45deg, var(--primary), var(--accent));
            color: white;
            padding: 14px 24px;
            border-radius: 28px;
            text-decoration: none;
            font-weight: 700;
            letter-spacing: 0.3px;
            transition: transform 0.25s ease, box-shadow 0.25s ease, filter 0.25s ease;
            box-shadow: 0 5px 20px rgba(0, 255, 255, 0.28);
            border: 1px solid rgba(255, 255, 255, 0.12);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 26px rgba(0, 255, 255, 0.45);
            filter: brightness(1.05);
        }

        .btn.secondary {
            background: transparent;
            color: var(--text);
            border: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: none;
        }

        /* FOOTER */
        .footer {
            margin-top: 30px;
            text-align: center;
            color: var(--muted);
            font-size: 0.9em;
        }

        /* RESPONSIVE */
        @media (max-width: 900px) {
            .stats { grid-template-columns: repeat(2, 1fr); }
        }
        @media (max-width: 520px) {
            .stats { grid-template-columns: 1fr; }
        }

        /* ACCESSIBILITY: Reduce motion */
        @media (prefers-reduced-motion: reduce) {
            * { animation: none !important; transition: none !important; }
        }
    </style>
</head>
