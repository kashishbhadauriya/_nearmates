<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat with <%= friend.name %></title>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f5f5f5; }
    #chat-box { border: 1px solid #ccc; border-radius: 6px; height: 400px; overflow-y: auto; padding: 10px; background: white; }
    .message { margin: 8px 0; padding: 6px 10px; border-radius: 8px; max-width: 70%; display: inline-block; }
    .mine { background: #d1ffd6; text-align: right; float: right; clear: both; }
    .theirs { background: #e8f0ff; text-align: left; float: left; clear: both; }
    .timestamp { font-size: 11px; color: gray; display: block; margin-top: 2px; }
    form { margin-top: 15px; display: flex; }
    input { flex: 1; padding: 10px; border-radius: 5px; border: 1px solid #ccc; }
    button { margin-left: 10px; padding: 10px 20px; border: none; border-radius: 5px; background: #4caf50; color: white; cursor: pointer; }
    button:hover { background: #43a047; }
  </style>
</head>
<body>
  <h2>Chat with <%= friend.name %></h2>

  <div id="chat-box">
    <% messages.forEach(msg => { %>
      <div class="message <%= msg.sender.toString() === user._id.toString() ? 'mine' : 'theirs' %>">
        <%= msg.message %>
        <span class="timestamp"><%= new Date(msg.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
      </div>
    <% }) %>
  </div>

  <form id="message-form">
    <input type="text" id="messageInput" placeholder="Type your message..." required autocomplete="off" />
    <button type="submit">Send</button>
  </form>

  <script>
    const socket = io();
    const userId = "<%= user._id %>";
    const receiverId = "<%= friend._id %>";

    const chatBox = document.getElementById("chat-box");
    const form = document.getElementById("message-form");
    const input = document.getElementById("messageInput");

    // Join the chat
    socket.emit("user-connected", userId);

    // Send message
    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const message = input.value.trim();
      if (!message) return;

      socket.emit("send-private-message", { senderId: userId, receiverId, message });
      input.value = "";
    });

    // Receive messages (both yours & theirs)
    socket.on("private-message", (msg) => {
      if (
        (msg.senderId === userId && msg.receiverId === receiverId) ||
        (msg.senderId === receiverId && msg.receiverId === userId)
      ) {
        const div = document.createElement("div");
        div.classList.add("message", msg.senderId === userId ? "mine" : "theirs");
        div.innerHTML = `${msg.message}<span class="timestamp">${new Date(msg.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</span>`;
        chatBox.appendChild(div);
        chatBox.scrollTop = chatBox.scrollHeight;
      }
    });
  </script>
</body>
</html>
